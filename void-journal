

HOME_DEVICE=/dev/sdX
HOME_VOLUME=/dev/sdX1
/usr/bin/fdisk "${HOME_DEVICE}"
/usr/bin/mkfs.xfs "${HOME_VOLUME}"
HOME_UUID=/usr/bin/blkid -o value -s UUID "${HOME_VOLUME}"
echo "UUID=${HOME_UUID} /home xfs defaults,discard 0 1" >> /etc/fstab

