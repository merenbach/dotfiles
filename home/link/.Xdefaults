! xautolock settings
Xautolock.time:     10
Xautolock.locker:   /usr/local/bin/xlock

XLock.mode:         blank
XLock.dpmsoff:      5

!! Xft
!Xft.dpi: 96
!!Xft.rgba: rgb -- triggers wide spacing issue in urxvt
Xft.rgba: none
Xft.antialias: true
Xft.hinting: true
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault
Xft.autohint: false

! xterm ----------------------------------------------------------------------

xterm*VT100.geometry:     80x25
xterm*selectToClipboard:  true
! http://unix.stackexchange.com/questions/225062/how-can-i-copy-text-from-xterm-awesome-debian-virtualbox
!xterm*VT100.Translations: #override \
!    Ctrl Shift <Key>V:    insert-selection(SELECT) \n\
!    Ctrl Shift <Key>C:    copy-selection(SELECT)
xterm*faceName:           Monospace:size=13
xterm*dynamicColors:      true
!! this is necessary for proper vim workage
!xterm*termName:           xterm-256color
xterm*locale:             true
!xterm*metaSendsEscape:    true
!xterm*altSendsEscape:     true
!xterm*eightBitInput:      false
xterm*saveLines:          16384
xterm*scrollKey:          true
xterm*scrollTtyOutput:    false
xterm*scrollBar:          false
xterm*rightScrollBar:     true
xterm*jumpScroll:         true
xterm*fastScroll:         true
xterm*multiScroll:        true
xterm*toolBar:            false
!xterm*charClass:          33:48,35:48,37:48,43:48,45-47:48,64:48,95:48,126:48


!! x11-ssh-askpass ------------------------------------------------------------
!! adapted from <https://wiki.archlinux.org/index.php/X_resources>
!
!SshAskpass*font:                   -*-dina-medium-r-*-*-12-*-*-*-*-*-*-*
!SshAskpass*background:             #000000
!SshAskpass*foreground:             #ffffff
!SshAskpass.Button*background:      #000000
!SshAskpass.Indicator*foreground:   #ff9900
!SshAskpass.Indicator*background:   #090909
!SshAskpass*topShadowColor:         #000000
!SshAskpass*bottomShadowColor:      #000000
!SshAskpass.*borderWidth:           1
!SshAskpass.*borderColor:           #333333

! depth 32 required for true transparency
URxvt.depth: 24

! colors
URxvt.transparent: false

! login shell (read ~/.bash_profile)
URxvt.loginShell: false

URxvt.urgentOnBell: false
URxvt.visualBell: false

!! Adapted from Arch wiki

! do not scroll with output
URxvt.scrollTtyOutput: false

! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt.scrollWithBuffer: true

! scroll back to the bottom on keypress
URxvt.scrollTtyKeypress: true

URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0
URxvt.secondaryWheel: 1

!! end Arch wiki adaptation

! scrollback buffer size
URxvt.saveLines: 16384

! scrollbar style - rxvt (default), plain (most compact), next, or xterm
URxvt.scrollBar: false
URxvt.scrollstyle: plain
URxvt.scrollBar_right: false

! Adapted from http://wiki.afterstep.org/index.php?title=Rxvt-Unicode_Configuration_Tutorial
URxvt.font: xft:Monospace:style=Regular:size=13
URxvt.boldFont: xft:Monospace:style=Bold:size=13
URxvt.italicFont: xft:Monospace:style=Oblique:size=13
URxvt.boldItalicFont: xft:Monospace:style=Bold Oblique:size=13

URxvt.iconFile: /usr/local/share/icons/Tango/scalable/apps/terminal.svg

! LAUNCH links in browser
URxvt.perl-ext-common: default,confirm-paste,searchable-scrollback
URxvt.perl-ext: clipboard,url-select
!URxvt.url-launcher: firefox
!URxvt.matcher.button: 1
URxvt.url-select.button: 1
URxvt.url-select.launcher: firefox
URxvt.url-select.underline: true

! Clipboard
!URxvt.clipboard.copycmd:  xclip -i -selection clipboard
!URxvt.clipboard.pastecmd: xclip -o -selection clipboard
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.keysym.Shift-Control-Meta-V: perl:clipboard:paste_escaped
URxvt.iso14755: False

! color links
URxvt.colorUL: #4682B4

! cursor
URxvt.cursorBlink: true
URxvt.cursorUnderline: false

