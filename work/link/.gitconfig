[user]
	name = Andrew Merenbach
	email = andrew.merenbach@floqast.com
[push]
	default = simple
[core]
    quotepath = false
    autocrlf = input
    editor = vim -f
    excludesfile = ~/.cvsignore
[color]
    ui = auto
[color "branch"]
    current = blue reverse
    local = blue
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = blue
    changed = green
    untracked = cyan 
[alias]
    co = checkout
    ci = commit
    st = status
    br = branch
    hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
    lo = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(white)<%an>%Creset' --abbrev-commit --date=relative
    addr = add -A
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
[log]
    decorate = full
[mergetool]
	prompt = false
[merge]
	tool = vimdiff
	conflictstyle = diff3
[diff]
	tool = diffuse
	conflictstyle = diff3
[difftool "diffuse"]
	prompt = false
